@model ma.Areas.Account.Models.LoginModel

@{
    ViewBag.Title = "Log in";
    //Layout = "";
}

    <div class="logo">
        TODO: LOGO BITCHES
    </div>

    <div class="content">
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <h3 class="form-title">Login to your account</h3>
            <div class="control-group">
                <div class="controls">
                    <div class="input-icon left">
                        <i class="icon-user"></i>
                        <input class="m-wrap" id="UserName" name="UserName" type="text" placeholder="Username" />
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <div class="input-icon left">
                        <i class="icon-lock"></i>
                        <input class="m-wrap" id="Password" name="Password" type="password" style="" placeholder="Password" />
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
            </div>
            <div class="form-actions">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                <button type="submit" value="Log in" id="login-btn" class="btn green pull-right"><i class="m-icon-swapright m-icon-white"></i>Login</button>
            </div>
        }
        <div class="facebook_area">
            @Html.Action("ExternalLoginsList", "Account", new { Area = "Account", ReturnUrl = ViewBag.ReturnUrl })
        </div>
    </div>
